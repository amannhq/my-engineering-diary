{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DailyInsightResponse",
  "type": "object",
  "required": ["logRef", "analysisSteps", "status", "tokenUsage", "requestId"],
  "properties": {
    "logRef": {
      "type": "string",
      "pattern": "^daily-logs/\\d{4}-\\d{2}-\\d{2}\\.[a-z]{3}\\.log\\.md$"
    },
    "analysisSteps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["index", "title", "summary", "timestamp"],
        "properties": {
          "index": { "type": "integer", "minimum": 1 },
          "title": { "type": "string" },
          "summary": { "type": "string" },
          "timestamp": { "type": "string", "format": "date-time" }
        }
      }
    },
    "status": {
      "type": "string",
      "enum": ["PASS", "WARN", "INFO"]
    },
    "tokenUsage": {
      "type": "object",
      "required": ["prompt", "completion", "total"],
      "properties": {
        "prompt": { "type": "integer", "minimum": 0 },
        "completion": { "type": "integer", "minimum": 0 },
        "total": { "type": "integer", "minimum": 0 }
      }
    },
    "requestId": { "type": "string" },
    "artifactPath": { "type": "string" },
    "warnings": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
